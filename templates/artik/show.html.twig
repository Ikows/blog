{% extends 'base.html.twig' %}

{% block title%} Show article {% endblock %}

{% block body %}

    <strong>Tags :</strong>
    <ul>
        {% for tag in tags %}
            <li><a href="{{ path('tag', {name:  tag.name}) }}">{{ tag.name }}</a> </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

{% endblock %}